{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5",
    "baseUrl": "../../apps/web/src",
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["../../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
